<section>
  <div class="container">
    <div class="row mt-4"> 
      <a href="/admin/add-product" class="btn btn-success ml-auto">Add Product</a>
    </div>
    <table class="table table-dark mt-5">
      <thead class="thead-dark">
        <tr>
          <th scope="col">No</th>
          <th scope="col">Title</th>
          <th scope="col">Category</th>
          <th scope="col">Price</th>
          <th scope="col">Description</th>
          <th>Image</th>
        </tr>
      </thead>
      <tbody>
        {{#each products}}
        <tr>
          <th scope="row"><span class="row-number"></span></th>
          <td>{{this.Name}}</td>
          <td>{{this.Category}}</td>
          <td>$ {{this.price}}</td>
          <td>{{this.Description}}</td>
          <td><img style="width: 50px; height: 50px" src="/product-images/{{this._id}}.jpg" alt=""></td>
          <td>
            <a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
            <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Are You want to delete {{this.name}} ?')">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</section>

<script>
  // JavaScript to add numbering starting from 1
  const rowNumbers = document.querySelectorAll('.row-number');
  rowNumbers.forEach((element, index) => {
    element.textContent = index + 1;
  });
</script>
